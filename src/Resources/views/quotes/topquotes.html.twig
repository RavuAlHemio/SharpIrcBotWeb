{% extends "../base.html.twig" %}

{% block title %}Top Quotes{% endblock %}

{% block body %}
    <table>
    {% for quote in top_quotes %}
        <tr>
            <td aria-label="score" class="score {% if quote.rankChanged %}changed{% else %}unchanged{% endif %}">{{ quote.score|e }}</td>
            <td aria-label="body" class="quote-body">{{ quote.body|e }}</td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}